  <div class="card-block">
      <%= form_for(@detail) do |f| %>

        <div class="form-group row">
        <%= f.label "いつ",id: "date", class: "col-xs-2 col-form-label" %>
        <%= f.date_field :date, class: "col-xs-10"%>
        </div>

        <div class="form-group row">
        <%= f.label "だれ",id: "user", class: "col-xs-2 col-form-label"  %>
        <%= f.collection_select :user, User.all, :name, :name, :prompt => true, class: "col-xs-10"%>
        </div>

        <div class="form-group row">
        <%= f.label "どこ", id: "department", class: "col-xs-2 col-form-label"  %>
        <%= f.text_field :department, class: "col-xs-10"%>
        </div>

        <div class="form-group row">
        <%= f.label "金額", id: "payment", class: "col-xs-2 col-form-label"  %>
        <%= f.number_field :payment, class: "col-xs-10" %>
        </div>

        <div class="form-group row">
        <%= f.submit "OK", class: "btn btn-primary" %>
        </div>
      <% end %>
  </div>
