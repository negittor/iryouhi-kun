<h1>Details#index</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>User</th>
      <th>Department</th>
      <th>Payment</th>
      <th>edit</th>
    </tr>
  </thead>

  <tbody>
    <% @details.each do |detail| %>
      <tr>
        <td><%= detail.date %></td>
        <td><%= detail.user %></td>
        <td><%= detail.department %></td>
        <td><%= detail.payment %></td>
        <td><%= link_to "修正", edit_detail_path(detail) %>
          <%= link_to "削除", detail_path(detail), method: :delete, data: { confirm: '削除しますか？' }  %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<div>
  <%= link_to "戻る", new_detail_path %>
</div>
